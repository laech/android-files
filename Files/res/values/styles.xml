<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
    <item name="android:windowContentOverlay">@drawable/action_bar_shadow</item>
    <item name="android:windowBackground">@drawable/window_background</item>
  </style>

  <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    <item name="android:background">@drawable/action_bar_background</item>
  </style>

  <style name="ActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#474747</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="ActionBarWidget" parent="android:Theme.Holo.Light">
    <item name="android:itemTextAppearance">@style/ActionBarOverflowItem</item>
  </style>

  <style name="ActionBarOverflowItem" parent="android:TextAppearance.Holo.Medium">
    <item name="android:textColor">#AA000000</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="ShadowText" parent="android:Widget.Holo.TextView">
    <item name="android:shadowColor">#FFFFFFFF</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#474747</item>
  </style>

  <style name="ListEmptyText" parent="ShadowText">
    <item name="android:layout_gravity">center</item>
    <item name="android:paddingBottom">?android:actionBarSize</item>
  </style>

  <style name="ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
  </style>

  <style name="ListItemContainer">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
  </style>

  <style name="ListItemText" parent="ShadowText">
    <item name="android:drawablePadding">8dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="FilesList" parent="ListView">
    <item name="android:choiceMode">multipleChoiceModal</item>
    <item name="android:fastScrollEnabled">true</item>
  </style>

  <style name="FilesListItemContainer" parent="ListItemContainer">
    <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
  </style>

  <style name="FilesListItemText" parent="ListItemText">
    <item name="android:drawablePadding">16dp</item>
    <item name="android:ellipsize">middle</item>
  </style>

  <style name="FilesListItemSecondaryText" parent="ListItemText">
    <item name="android:textColor">?android:attr/textColorTertiary</item>
    <item name="android:textSize">13sp</item>
    <item name="android:minHeight">0dp</item>
  </style>

  <style name="Sidebar" parent="ListView">
    <item name="android:background">@drawable/sidebar_background</item>
    <item name="android:divider">@null</item>
  </style>

  <style name="SideBarItem" parent="ListItemText">
    <item name="android:ellipsize">end</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    <item name="android:paddingLeft">16dp</item>
  </style>

  <style name="SidebarHeader" parent="ShadowText">
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#676767</item>
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans</item>
  </style>

</resources>
