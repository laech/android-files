<?xml version="1.0" encoding="utf-8"?>
<l.files.ui.browser.ActivatedCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/files_item_space_vertical"
    android:layout_marginEnd="@dimen/files_item_space_horizontal"
    android:layout_marginStart="@dimen/files_item_space_horizontal"
    android:layout_marginTop="@dimen/files_item_space_vertical"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/files_item_card_radius"
    app:cardElevation="1dp">

    <TextView
        android:id="@android:id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/files_item_card_inner_space"
        android:drawablePadding="8dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.1"
        android:paddingBottom="14dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

</l.files.ui.browser.ActivatedCardView>
