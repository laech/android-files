<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="@dimen/files_item_space_horizontal"
        android:layout_marginLeft="@dimen/files_item_space_horizontal"
        android:layout_marginRight="@dimen/files_item_space_horizontal"
        android:layout_marginStart="@dimen/files_item_space_horizontal"
        android:layout_marginTop="@dimen/files_item_space_vertical"
        app:cardCornerRadius="@dimen/files_item_card_radius"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ad"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#aaa" />

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/card" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/remove_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:src="@drawable/ic_close_white_48dp"
        app:backgroundTint="#ccc"
        app:elevation="2dp"
        app:fabSize="mini"
        app:useCompatPadding="true" />

</RelativeLayout>
