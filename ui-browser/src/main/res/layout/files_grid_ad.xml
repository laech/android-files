<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/files_item_space_vertical"
        android:layout_marginEnd="@dimen/files_item_space_horizontal"
        android:layout_marginLeft="@dimen/files_item_space_horizontal"
        android:layout_marginRight="@dimen/files_item_space_horizontal"
        android:layout_marginStart="@dimen/files_item_space_horizontal"
        android:layout_marginTop="@dimen/files_item_space_vertical"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/files_item_card_radius"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ad"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorTertiary" />

    </android.support.v7.widget.CardView>

</FrameLayout>
