<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="l.files"
    android:versionCode="3"
    android:versionName="0.2.1">

  <uses-sdk
      android:minSdkVersion="14"
      android:targetSdkVersion="18"/>

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".app.FilesApp"
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme">

    <activity
        android:name=".app.FilesActivity"
        android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <service android:name=".event.internal.FileService$Cut"/>
    <service android:name=".event.internal.FileService$Copy"/>
    <service android:name=".event.internal.FileService$Delete"/>

    <activity android:name="l.files.test.TestFileListContainerFragmentActivity"/>
    <activity android:name="l.files.test.TestFilesFragmentActivity"/>
    <activity android:name="l.files.test.TestSidebarFragmentActivity"/>
  </application>
</manifest>
