<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/activatedBackgroundIndicator">

  <TextView
      android:id="@android:id/icon"
      android:layout_width="?android:attr/listPreferredItemHeight"
      android:layout_height="?android:attr/listPreferredItemHeight"
      android:layout_marginLeft="4dp"
      android:layout_centerVertical="true"
      style="@style/Theme.ListView.Item.IconFont"/>

  <ImageView
      android:id="@android:id/background"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:contentDescription="@null"
      android:background="@android:color/white"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="?android:attr/listPreferredItemHeight"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      android:paddingLeft="8dp">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/text_size_list_item_primary"/>

    <TextView
        android:id="@android:id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/text_size_list_item_secondary"/>

  </LinearLayout>
</RelativeLayout>
