<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
    <!-- https://code.google.com/p/android/issues/detail?id=58280 -->
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:titleTextStyle">@style/ActionBarTitle</item>
  </style>

  <style name="ActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="ActionBarWidget" parent="android:Theme.Holo.Light">
    <item name="android:itemTextAppearance">@style/ActionBarOverflowItem</item>
  </style>

  <style name="ActionBarOverflowItem" parent="android:TextAppearance.Holo.Medium">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="NormalText">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>

  <style name="ListEmptyText" parent="NormalText">
    <item name="android:layout_gravity">center</item>
    <item name="android:paddingBottom">?android:actionBarSize</item>
  </style>

  <style name="ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
  </style>

  <style name="ListItemText" parent="NormalText">
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="FilesList" parent="ListView">
    <item name="android:fastScrollEnabled">true</item>
  </style>

  <style name="FileListItemHeaderText">
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:textColor">?android:attr/textColorTertiary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@android:color/white</item>
  </style>

  <style name="Sidebar" parent="ListView">
    <item name="android:divider">@null</item>
  </style>

  <style name="SidebarHeader" parent="NormalText">
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?android:attr/textColorTertiary</item>
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans</item>
  </style>

  <style name="DialogWindowTitle" parent="android:TextAppearance.Holo.DialogWindowTitle">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Dialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
  </style>

  <style name="SortByListItemText" parent="ListItemText">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
    <item name="android:textSize">18sp</item>
  </style>

</resources>
