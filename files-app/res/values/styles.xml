<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
    <item name="android:actionBarItemBackground">@drawable/selector_light</item>
    <item name="android:actionModeBackground">@drawable/action_mode_background</item>
    <item name="android:actionModeCloseButtonStyle">@style/ActionModeCloseButton</item>
    <item name="android:actionModeStyle">@style/ActionModeStyle</item>
    <!-- https://code.google.com/p/android/issues/detail?id=58280 -->
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@drawable/window_background</item>
  </style>

  <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:background">@drawable/action_bar_background</item>
    <item name="android:titleTextStyle">@style/ActionBarTitle</item>
  </style>

  <style name="ActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="ActionBarWidget" parent="android:Theme.Holo">
    <item name="android:itemTextAppearance">@style/ActionBarOverflowItem</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
  </style>

  <style name="ActionBarOverflowItem" parent="android:TextAppearance.Holo.Medium">
    <item name="android:textColor">@color/text_primary_inverse</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="ActionModeCloseButton" parent="android:Widget.Holo.Light.ActionButton.CloseMode">
    <item name="android:background">@drawable/selector_light</item>
  </style>

  <style name="ActionModeStyle" parent="android:Widget.Holo.Light.ActionMode">
    <item name="android:titleTextStyle">@style/ActionModeTitleText</item>
  </style>

  <style name="ActionModeTitleText" parent="android:TextAppearance.Holo.Widget.ActionMode.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="DropDownListView" parent="android:Widget.Holo.Light.ListView.DropDown">
    <item name="android:background">@color/action_bar_menu_background</item>
    <item name="android:listSelector">@drawable/selector_dark</item>
    <item name="android:divider">@null</item>
  </style>

  <style name="SeparatorHorizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/separator</item>
  </style>

  <style name="SeparatorVertical">
    <item name="android:layout_width">@dimen/separator</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="NormalText">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="IconFont" parent="NormalText">
    <item name="android:gravity">center</item>
    <item name="android:text">@string/ic_font_char</item>
  </style>

  <style name="ListEmptyText" parent="NormalText">
    <item name="android:layout_gravity">center</item>
    <item name="android:paddingBottom">?android:actionBarSize</item>
  </style>

  <style name="ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
  </style>

  <style name="ListItemText" parent="NormalText">
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="FilesList" parent="ListView">
    <item name="android:fastScrollEnabled">true</item>
    <item name="android:divider">@null</item>
    <item name="android:listSelector">@drawable/selector_light</item>
  </style>

  <style name="FileListItemHeaderText">
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="FileListItemContainer">
    <item name="android:background">@drawable/selector_light</item>
  </style>

  <style name="FileListItemTextPrimary" parent="NormalText">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="FileListItemTextSecondary">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="FileListItemHeaderSeparator" parent="SeparatorHorizontal">
    <item name="android:background">@color/file_list_item_header_separator</item>
  </style>

  <style name="FileListIconFont" parent="IconFont">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="Sidebar" parent="ListView">
    <item name="android:divider">@null</item>
    <item name="android:background">@color/sidebar_background</item>
    <item name="android:listSelector">@drawable/selector_dark</item>
  </style>

  <style name="SidebarSeparator" parent="SeparatorVertical">
    <item name="android:background">@color/sidebar_separator</item>
  </style>

  <style name="SidebarHeader" parent="NormalText">
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/sidebar_item_header</item>
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">sans</item>
  </style>

  <style name="SidebarHeaderSeparator" parent="SeparatorHorizontal">
    <item name="android:background">@color/sidebar_item_header_separator</item>
  </style>

  <style name="SidebarIconFont" parent="IconFont">
    <item name="android:textColor">@color/text_primary_inverse</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="SidebarItemText" parent="NormalText">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/text_primary_inverse</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="SidebarItemText">
    <item name="android:ellipsize">end</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:maxLines">2</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/text_primary_inverse</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="DialogWindowTitle" parent="android:TextAppearance.Holo.DialogWindowTitle">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Dialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
  </style>

  <style name="SortByListItemText" parent="ListItemText">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
    <item name="android:textSize">18sp</item>
  </style>

</resources>
