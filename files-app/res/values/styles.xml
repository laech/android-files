<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
    <item name="android:actionBarWidgetTheme">@style/Theme.Widget.ActionBar</item>
    <item name="android:actionBarItemBackground">@drawable/selector_light</item>
    <item name="android:actionModeBackground">@drawable/action_bar_background</item>
    <item name="android:actionModeCloseButtonStyle">@style/Theme.ActionButton.CloseMode</item>
    <item name="android:actionModeStyle">@style/Theme.ActionMode</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:textViewStyle">@style/Theme.TextView</item>
    <item name="android:listViewStyle">@style/Theme.ListView</item>
    <item name="android:listPreferredItemHeight">@dimen/list_preferred_item_height</item>
    <!-- https://code.google.com/p/android/issues/detail?id=58280 -->
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@drawable/window_background</item>
  </style>

  <style name="Theme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:background">@drawable/action_bar_background</item>
    <item name="android:titleTextStyle">@style/Theme.ActionBar.Title</item>
  </style>

  <style name="Theme.ActionBar.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.Widget.ActionBar" parent="android:Theme.Holo">
    <item name="android:itemTextAppearance">@style/Theme.ActionBar.Item</item>
    <item name="android:dropDownListViewStyle">@style/Theme.ListView.DropDown</item>
  </style>

  <style name="Theme.ActionBar.Item" parent="android:TextAppearance.Holo.Medium">
    <item name="android:textColor">@color/text_primary_inverse</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.ActionMode" parent="android:Widget.Holo.Light.ActionMode">
    <item name="android:titleTextStyle">@style/Theme.ActionMode.Title</item>
  </style>

  <style name="Theme.ActionButton.CloseMode" parent="android:Widget.Holo.Light.ActionButton.CloseMode">
    <item name="android:background">@drawable/selector_light</item>
  </style>

  <style name="Theme.ActionMode.Title" parent="android:TextAppearance.Holo.Widget.ActionMode.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.ListView.DropDown" parent="android:Widget.Holo.Light.ListView.DropDown">
    <item name="android:background">@color/action_bar_menu_background</item>
    <item name="android:listSelector">@drawable/selector_dark</item>
    <item name="android:divider">@null</item>
  </style>

  <style name="Theme.SeparatorHorizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/separator</item>
  </style>

  <style name="Theme.SeparatorVertical">
    <item name="android:layout_width">@dimen/separator</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Theme.TextView" parent="android:Widget.Holo.Light.TextView">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.TextView.IconFont" parent="Theme.TextView">
    <item name="android:gravity">center</item>
    <item name="android:text">@string/ic_font_char</item>
  </style>

  <style name="Theme.ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
    <item name="android:fastScrollEnabled">true</item>
    <item name="android:divider">@null</item>
    <item name="android:listSelector">@drawable/selector_light</item>
  </style>

  <style name="Theme.ListView.Item" parent="Theme.TextView"/>

  <style name="Theme.ListView.Item.Container">
    <item name="android:background">@drawable/selector_light</item>
  </style>

  <style name="Theme.ListView.Item.Primary" parent="Theme.ListView.Item">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
    <item name="android:textSize">@dimen/text_size_list_item_primary</item>
  </style>

  <style name="Theme.ListView.Item.Secondary" parent="Theme.ListView.Item">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_size_list_item_secondary</item>
  </style>

  <style name="Theme.ListView.Item.Header" parent="android:TextAppearance.Holo.Small">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="Theme.ListView.Item.Header.Separator" parent="Theme.SeparatorHorizontal">
    <item name="android:background">@color/file_list_item_header_separator</item>
  </style>

  <style name="Theme.ListView.Item.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textSize">@dimen/text_size_list_icon_font</item>
  </style>

  <style name="Theme.Sidebar" parent="Theme.ListView">
    <item name="android:divider">@null</item>
    <item name="android:background">@color/sidebar_background</item>
    <item name="android:listSelector">@drawable/selector_dark</item>
  </style>

  <style name="Theme.Sidebar.Separator" parent="Theme.SeparatorVertical">
    <item name="android:background">@color/sidebar_separator</item>
  </style>

  <style name="Theme.Sidebar.Header" parent="Theme.TextView">
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/sidebar_item_header</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans</item>
  </style>

  <style name="Theme.Sidebar.Header.Separator" parent="Theme.SeparatorHorizontal">
    <item name="android:background">@color/sidebar_item_header_separator</item>
  </style>

  <style name="Theme.Sidebar.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="android:textSize">@dimen/text_size_sidebar_icon_font</item>
  </style>

  <style name="Theme.Sidebar.Item" parent="Theme.TextView">
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="android:textSize">@dimen/text_size_sidebar_item</item>
  </style>

  <style name="Theme.Dialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowTitleStyle">@style/Theme.Dialog.Title</item>
  </style>

  <style name="Theme.Dialog.Title" parent="android:TextAppearance.Holo.DialogWindowTitle">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.Dialog.Item" parent="Theme.TextView">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
    <item name="android:textSize">18sp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="Theme.Tab">
    <item name="android:background">@drawable/tab_indicator</item>
  </style>

  <style name="Theme.TabText">
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#666666</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
    <item name="android:singleLine">true</item>
    <item name="android:fontFamily">sans</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
  </style>

  <style name="Theme.TabBackIndicator">
    <item name="android:src">@drawable/ic_back</item>
    <item name="android:visibility">gone</item>
  </style>

</resources>
