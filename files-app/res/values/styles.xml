<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:listPreferredItemHeight">@dimen/list_preferred_item_height</item>
  </style>

  <style name="Theme.TextView.IconFont" parent="android:Widget.Holo.Light.TextView">
    <item name="android:gravity">center</item>
    <item name="android:text">@string/ic_font_char</item>
  </style>

  <style name="Theme.ListView"/>
  <style name="Theme.ListView.Item"/>

  <style name="Theme.ListView.Item.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textSize">@dimen/text_size_list_icon_font</item>
  </style>

  <style name="Theme.Sidebar.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_size_sidebar_icon_font</item>
  </style>

  <style name="Theme.ListButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
    <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
    <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:drawablePadding">?android:attr/listPreferredItemPaddingLeft</item>
  </style>

</resources>
