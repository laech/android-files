<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppActionBarTitle</item>
        <item name="android:displayOptions">showHome|showCustom</item>
        <item name="android:customNavigationLayout">@layout/action_bar_title</item>
    </style>

    <style name="AppActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#CC000000</item>
        <item name="android:shadowColor">#FFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>