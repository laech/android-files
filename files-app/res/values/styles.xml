<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:listPreferredItemHeight">@dimen/list_preferred_item_height</item>
  </style>

  <style name="Theme.TextView.IconFont" parent="android:Widget.Holo.Light.TextView">
    <item name="android:gravity">center</item>
    <item name="android:text">@string/ic_font_char</item>
  </style>

  <style name="Theme.ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
    <item name="android:fastScrollEnabled">true</item>
    <item name="android:divider">@null</item>
  </style>

  <style name="Theme.ListView.Item"/>

  <style name="Theme.ListView.Item.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textSize">@dimen/text_size_list_icon_font</item>
  </style>

  <style name="Theme.Sidebar.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_size_sidebar_icon_font</item>
  </style>

  <style name="Theme.Tab">
    <item name="android:background">@drawable/tab_indicator_ab_holo</item>
  </style>

  <style name="Theme.TabText">
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#666666</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">normal</item>
    <item name="android:singleLine">true</item>
    <item name="android:fontFamily">sans</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
  </style>

  <style name="Theme.TabBackIndicator">
    <item name="android:src">@drawable/ic_back</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="Theme.ListButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
    <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
    <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:drawablePadding">?android:attr/listPreferredItemPaddingLeft</item>
  </style>

</resources>
