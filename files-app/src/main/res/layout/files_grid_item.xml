<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/files_item_space_vertical"
    android:layout_marginEnd="@dimen/files_item_space_horizontal"
    android:layout_marginStart="@dimen/files_item_space_horizontal"
    android:layout_marginTop="@dimen/files_item_space_vertical"
    app:cardBackgroundColor="@color/file_card_background"
    app:cardCornerRadius="@dimen/files_item_card_radius">

    <l.files.ui.browser.ColorOverlayLinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activated_item_background"
        android:orientation="vertical">

        <l.files.ui.browser.ColorOverlayImageView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:shadowColor="@color/file_item_text_shadow"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:shadowColor="@color/file_item_text_shadow"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/symlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:shadowColor="@color/file_item_text_shadow"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="@string/link_icon"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorTertiary"/>

            <TextView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/file_item_text_shadow"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="18sp"/>

        </LinearLayout>
    </l.files.ui.browser.ColorOverlayLinearLayout>
</android.support.v7.widget.CardView>
