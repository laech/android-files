<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:textColorAlertDialogListItem">@color/text_primary</item>
    <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
    <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
    <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
    <item name="android:textViewStyle">@style/Widget.TextView</item>
    <item name="android:listViewStyle">@style/Widget.ListView</item>
    <item name="android:windowBackground">@drawable/window_background</item>
  </style>

  <style name="TextAppearance.Large" parent="android:TextAppearance.Holo.Large">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Medium" parent="android:TextAppearance.Holo.Medium">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Small" parent="android:TextAppearance.Holo.Small">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Widget.ActionBar.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Widget.ActionMode.Title" parent="android:TextAppearance.Holo.Widget.ActionMode.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Widget.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionBar.Title</item>
  </style>

  <style name="Theme.SeparatorHorizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/separator</item>
  </style>

  <style name="Widget.TextView" parent="android:Widget.Holo.Light.TextView">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Widget.ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
    <item name="android:fastScrollEnabled">true</item>
    <item name="android:divider">@null</item>
    <item name="android:paddingLeft">@dimen/files_list_padding_side</item>
    <item name="android:paddingRight">@dimen/files_list_padding_side</item>
  </style>

  <style name="Widget.ProgressBarBelowActionBar" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
    <item name="android:indeterminateDrawable">@drawable/ab_progress_indeterminate</item>
    <item name="android:progressDrawable">@drawable/ab_progress</item>
  </style>

  <style name="Theme.ListView.Item" parent="Widget.TextView"/>


  <style name="Theme.Dialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowTitleStyle">@style/Theme.Dialog.Title</item>
  </style>

  <style name="Theme.Dialog.Title" parent="android:TextAppearance.Holo.DialogWindowTitle">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

</resources>
