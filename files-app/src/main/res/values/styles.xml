<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="Toolbar" parent="android:Theme.Material">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ToolbarPopup" parent="android:Theme.Material">
        <item name="android:colorBackground">@color/color_primary</item>
    </style>

    <style name="Theme.NoActionBar">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
