<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">#82563d</item>
        <item name="android:colorPrimary">#92664d</item>
        <!--<item name="android:colorAccent">?android:colorPrimaryDark</item>-->
        <!--<item name="android:textColorHighlight">#d7ccc8</item>-->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--<item name="android:navigationBarColor">?android:colorPrimaryDark</item>-->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionModeBackground">?android:colorPrimary</item>
        <item name="android:actionBarPopupTheme">@style/ActionBarPopupTheme</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
        <item name="android:titleTextAppearance">@style/TextAppearanceTitle</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="ActionBarPopupTheme" parent="Theme">
        <item name="android:backgroundTint">?android:attr/windowBackground</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Material.ActionBar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="TitleTextStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance.Material">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearanceTitle" parent="android:TextAppearance.Material.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearanceLarge" parent="android:TextAppearance.Material.Large">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearanceMedium" parent="android:TextAppearance.Material.Medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearanceSmall" parent="android:TextAppearance.Material.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
