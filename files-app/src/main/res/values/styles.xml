<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
    <item name="android:actionBarWidgetTheme">@style/ActionBarTheme</item>
    <item name="android:actionBarItemBackground">@drawable/selector_light</item>
    <item name="android:actionModeBackground">@drawable/action_bar_background</item>
    <item name="android:actionModeCloseButtonStyle">@style/Widget.ActionButton.CloseMode</item>
    <item name="android:actionModeStyle">@style/Widget.ActionMode</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:textColorAlertDialogListItem">@color/text_primary</item>
    <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
    <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
    <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
    <item name="android:textViewStyle">@style/Widget.TextView</item>
    <item name="android:listViewStyle">@style/Theme.ListView</item>
    <item name="android:listPreferredItemHeight">@dimen/list_preferred_item_height</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@drawable/window_background</item>
  </style>

  <style name="ActionBarTheme" parent="android:Theme.Holo.Light">
    <item name="android:itemTextAppearance">@style/ActionBarTheme.ItemTextAppearance</item>
    <item name="android:dropDownListViewStyle">@style/ActionBarTheme.DropDownListViewStyle</item>
  </style>

  <style name="ActionBarTheme.ItemTextAppearance" parent="android:TextAppearance.Holo.Medium">
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="ActionBarTheme.DropDownListViewStyle" parent="android:Widget.Holo.Light.ListView.DropDown">
    <item name="android:background">@color/action_bar_menu_background</item>
    <item name="android:listSelector">@drawable/selector_light</item>
    <item name="android:divider">@null</item>
  </style>

  <style name="TextAppearance.Large" parent="android:TextAppearance.Holo.Large">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Medium" parent="android:TextAppearance.Holo.Medium">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Small" parent="android:TextAppearance.Holo.Small">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Widget.ActionBar.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="TextAppearance.Widget.ActionMode.Title" parent="android:TextAppearance.Holo.Widget.ActionMode.Title">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Widget.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
    <item name="android:background">@drawable/action_bar_background</item>
    <item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionBar.Title</item>
  </style>

  <style name="Widget.ActionMode" parent="android:Widget.Holo.Light.ActionMode">
    <item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionMode.Title</item>
  </style>

  <style name="Widget.ActionButton.CloseMode" parent="android:Widget.Holo.Light.ActionButton.CloseMode">
    <item name="android:background">@drawable/selector_light</item>
  </style>

  <style name="Theme.SeparatorHorizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/separator</item>
  </style>

  <style name="Theme.SeparatorVertical">
    <item name="android:layout_width">@dimen/separator</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Widget.TextView" parent="android:Widget.Holo.Light.TextView">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.TextView.IconFont" parent="Widget.TextView">
    <item name="android:gravity">center</item>
    <item name="android:text">@string/ic_font_char</item>
  </style>

  <style name="Theme.ListView" parent="android:Widget.Holo.ListView">
    <item name="android:scrollbarStyle">outsideOverlay</item>
    <item name="android:fastScrollEnabled">true</item>
    <item name="android:divider">@null</item>
    <item name="android:listSelector">@drawable/selector_light</item>
  </style>

  <style name="Theme.ListView.Item" parent="Widget.TextView"/>

  <style name="Theme.Sidebar" parent="Theme.ListView">
    <item name="android:divider">@null</item>
    <item name="android:background">@color/sidebar_background</item>
    <item name="android:listSelector">@drawable/selector_dark</item>
  </style>

  <style name="Theme.Sidebar.Separator" parent="Theme.SeparatorVertical">
    <item name="android:background">@color/sidebar_separator</item>
  </style>

  <style name="Theme.Sidebar.Header" parent="Widget.TextView">
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/sidebar_item_header</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans</item>
  </style>

  <style name="Theme.Sidebar.Header.Separator" parent="Theme.SeparatorHorizontal">
    <item name="android:background">@color/sidebar_item_header_separator</item>
  </style>

  <style name="Theme.Sidebar.IconFont" parent="Theme.TextView.IconFont">
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="android:textSize">@dimen/text_size_sidebar_icon_font</item>
  </style>

  <style name="Theme.Sidebar.Item" parent="Widget.TextView">
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="android:textSize">@dimen/text_size_sidebar_item</item>
  </style>

  <style name="Theme.Dialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowTitleStyle">@style/Theme.Dialog.Title</item>
  </style>

  <style name="Theme.Dialog.Title" parent="android:TextAppearance.Holo.DialogWindowTitle">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>

  <style name="Theme.ListButton" parent="Widget.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
    <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
    <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:drawablePadding">?android:attr/listPreferredItemPaddingLeft</item>
  </style>

</resources>
