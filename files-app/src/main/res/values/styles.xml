<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="android:Theme.Material.Light">
        <item name="android:actionDropDownStyle">@style/ActionDropDownStyle</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionDropDownStyle" parent="android:Widget.Material.Spinner">
        <item name="android:background">@null</item>
    </style>

</resources>
